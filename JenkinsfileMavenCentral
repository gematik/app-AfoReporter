@Library('gematik-jenkins-shared-library') _

// GitHub
def REPO_URL = 'https://github.com/gematik/app-AfoReporter.git'
def BRANCH = 'master'

pipeline {

    options {
        disableConcurrentBuilds()
        skipDefaultCheckout()
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
    }
    agent { label 'Docker-Publish' }

    tools {
        maven 'Default'
    }
    stages {

        stage('Checkout') {
            steps {
                git branch: BRANCH,
                        url: REPO_URL
            }
        }

        stage('Verify') {
            steps {
                sh "mvn verify"
            }
        }
/*        stage('Build') {
            steps {
                mavenBuild()
            }
        }

        stage('Unit Test') {
           steps {
                mavenTest()
            }
        }
*/
        stage('Sonar') {
            steps {
                mavenCheckWithSonarQube()
            }
        }

        stage('Publish to MavenCentral') {
            steps {
                mavenDeploy("pom.xml", "-Pexternal -DautoReleaseAfterClose=false")
            }
        }
    }
    post {
        always {
            showJUnitAsXUnitResult()
            sendEMailNotification()
        }
    }
}